._header {
  background: rgba(177, 201, 65, 0.8);
  height: 80rpx;
  width: 100%;
}
._header ._h2 {
  text-align: center;
  color: #f9f8f6;
}
.uni-margin-wrap {
  width: 690rpx;
  width: 100%;
}
.swiper {
  height: 300rpx;
}
.swiper-item {
  display: block;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
}
.swiper-item ._img {
  height: 100%;
  width: 100%;
}
.huanxiang {
  width: 80%;
  margin: 0 auto;
  text-align: center;
  display: flex;
}
.huanxiang .huanxiang-item {
  border: 1rpx solid #b1c941;
  border-radius: 5rpx;
  margin: 10rpx;
  width: 50%;
}
.huanxiang .huanxiang-item ._h3 {
  height: 40rpx;
  color: gray;
}
.huanxiang .huanxiang-item .text {
  height: 50px;
  font-size: 14px;
  margin-top: 5px;
  color: gray;
  font-size: 40rpx;
}
.huanxiang .huanxiang-item.active ._h3 {
  color: #b1c941;
}
.huanxiang .huanxiang-item.active .text {
  color: #b1c941;
}
.HxList {
  display: grid;
  margin: 40rpx 5rpx;
  grid-template-columns: auto 200rpx;
}
.HxList .img ._img {
  width: 200rpx;
  height: 200rpx;
}
.HxList .lue .time {
  display: flex;
}
.HxList .lue .time ._p {
  width: 50%;
}
.HxList .lue .time ._p button {
  background-color: #b1c941;
  color: #f9f8f6;
}
.HxList .lue ._span {
  -webkit-line-clamp: 5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

